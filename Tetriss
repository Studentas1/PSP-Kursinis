#include <SFML/Graphics.hpp>
#include <time.h>
using namespace sf;

const int M = 20; //Zemelapio vertikali riba
const int N = 10; //Zemelapio horizontali riba

bool gameOver = false;

int gameMap[M][N] = { 0 }; //Zaidimo zemelapis

//Figuros sukimo taskas
struct Point 
{int x, y;} a[4], b[4];

//Figuros
int figures[6][4] =
{
	1,3,5,7,
	3,5,7,6,
	3,5,4,6,
	2,4,5,7,
	2,3,5,7,
	3,5,4,7,
};

//Tetrio figuru zaidimo mapo atzvilgiu tikrinimas
bool borderCheck()
{
	for (int i = 0; i < 4; i++)
	{
		if (a[i].x < 0 || a[i].x >= N || a[i].y >= M)
		{
			return 0;
		}
		else if (gameMap[a[i].y][a[i].x])
		{
			return 0;
		}
	}
}

int main()
{
	srand(time(0));

	// Tetrio langas
	RenderWindow window(VideoMode(360, 720), "Tetris!");

	//Tetrio figuros tekstura
	Texture tetrisTexture;
	tetrisTexture.loadFromFile("C:/Users/Slimas/Desktop/tetris.png");

	//Tetrio figuros spalvos fragmentas
	Sprite colorFragment(tetrisTexture);
	colorFragment.setTextureRect(IntRect(0, 0, 36, 36));

	int move = 0;
	bool rotate = 0;
	int colorNum = 1;
	float timer = 0, delay = 0.3;
	Clock clock;


	while (window.isOpen())
	{
		float time = clock.getElapsedTime().asSeconds();
		clock.restart();
		timer += time;

		Event e;
		while (window.pollEvent(e))
		{
			//Programos uzdarymas
			if (e.type == Event::Closed)
			{
				window.close();
			}

			//Klavieturos sekimas
			if (e.type == Event::KeyPressed)
			{
				if (e.key.code == Keyboard::Up)
				{
					rotate = true;
				}
				else if (e.key.code == Keyboard::Left)
				{
					move = -1;
				}
				else if (e.key.code == Keyboard::Right)
				{
					move = 1;
				}
			}

			//Figuros kritimo pagreitinimas
			if (Keyboard::isKeyPressed(Keyboard::Down))
			{
				delay = 0.05;
			}

			//Judejimo operacijos
			for (int i = 0; i < 4; i++)
			{
				b[i] = a[i];
				a[i].x += move;
			}

			if (!borderCheck())
			{
				for (int i = 0; i < 4; i++)
				{
					a[i] = b[i];
				}
			}

			//Figuros sukimas
			if (rotate)
			{
				//figuros sukimo centras
				Point point = a[1]; 
				for (int i = 0; i < 4; i++)
				{
					int x = a[i].y - point.y;
					int y = a[i].x - point.x;
					a[i].x = point.x - x;
					a[i].y = point.y + y;
				}
				if (!borderCheck())
				{
					for (int i = 0; i < 4; i++)
					{
						a[i] = b[i];
					}
				}
			}
		}

		//einantis laikas

		if (timer > delay)
		{
			for (int i = 0; i < 4; i++)
			{
				b[i] = a[i];
				a[i].y += 1;
			}

			if (!borderCheck())
			{
				int count = 0;
				//spalvos priskyrimas
				for (int i = 0; i < 4; i++)
				{
					gameMap[b[i].y][b[i].x] = colorNum;
				}
				colorNum = 1 + rand() % 6;
				int n = rand() % 7;
				for (int i = 0; i < 4; i++)
				{
					a[i].x = figures[n][i] % 2;
					a[i].y = figures[n][i] / 2;
					if (gameMap[i][i] != 0)
					{
						gameOver = true;
					}
				}
			}

			timer = 0;
		}

		//Ar yra linija patikrinimas

		int temp = M - 1;
		for (int i = M-1; i > 0; i--)
		{
			int count = 0;
			for (int j = 0; j < N; j++)
			{
				if (gameMap[i][j])
				{
					count++;
				}
				gameMap[temp][j] = gameMap[i][j];
			}
			if (count < N)
			{
				temp--;
			}
		}

		move = 0; rotate = 0; delay = 0.3;
		
		window.clear(Color::White);
		//Piesimas
		for (int i = 0; i < M; i++)
		{
			//Breziama figura
			for (int j = 0; j < N; j++)
			{
				if (gameMap[i][j] == 0)
				{
					continue;
				}
				colorFragment.setTextureRect(IntRect(gameMap[i][j] * 36, 0, 36, 36));
				colorFragment.setPosition(j * 36, i * 36);
				window.draw(colorFragment);
			}
		}
		for (int i = 0; i < 4; i++)
		{
			//Nustatoma spalva atitinkamai figurai
			colorFragment.setTextureRect(IntRect(colorNum * 36, 0, 36, 36));
			colorFragment.setPosition(a[i].x * 36, a[i].y * 36);
			window.draw(colorFragment);
		}
		
		
		
		for (int i = 1; i < N-1; i++)
		{
			if(gameMap[0][i] !=0 )
			{
				gameOver = true;
			}
			
		}
		if (gameOver == true)
		{
			break;
		}

		window.display();
	}
}
